<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>

    <h1 class="display-3">You've Discovered My Secrets!</h1>
    <!-- Display existing secrets -->
    <% usersWithSecrets.forEach(function(user) { %>
      <p class="secret-text"><%= user.secret %></p>
    <% }) %>
    <!-- Display new secret form -->
    <form action="/submit" method="post">
      <input type="text" name="secret" placeholder="Share your secret...">
      <button type="submit">Submit</button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
